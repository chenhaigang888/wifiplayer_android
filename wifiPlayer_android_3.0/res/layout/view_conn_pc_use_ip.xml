<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btnAreaLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialog_bg_wifiplayer"
    android:orientation="vertical" >
<TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialog_title"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:text="@string/input_ip_dialog_title"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:orientation="horizontal" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/ip_addr"/>
        <EditText 
            android:id="@+id/ipAddrEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ip_edittext"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:text="@string/ok" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:text="@string/cancel" 
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</LinearLayout>